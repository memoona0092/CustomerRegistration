            @Html.DisplayFor(modelItem => item.CustFatherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustPhoneNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountryShortCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SelectedRegionCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PostCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id  }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
