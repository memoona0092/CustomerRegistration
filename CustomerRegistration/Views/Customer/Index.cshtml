@model IEnumerable<CustomerRegistration.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2> Customers List</h2>

<p>
    @Html.ActionLink("Create New", "AddCustomer")
</p>
<table class="table">
    <tr>
        <th>
