            @Html.DisplayNameFor(model => model.CustPhoneNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountryShortCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SelectedRegionCode)
        </th>
